@using E_ticket514.Models.ViewModels
@model ModelsAndActorMovieVM

<div class="container">
    <!-- Movie Details Card -->
    <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="/images/movies/@Model.Movie.Images.FirstOrDefault()?.ImageUrl" class="img-fluid rounded-start" alt="Movie image">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Movie.Name</h5>
                    <p class="card-text">@Model.Movie.Description</p>
                    <p class="card-text"><strong>Category:</strong> @Model.Movie.Category.Name</p>
                    <p class="card-text"><strong>Cinema:</strong> @Model.Movie.Cinema.Name</p>

                    @foreach (var item in Model.actorMovies)
                    {
                        <img src="/images/cast/@item.Actor.ProfilePicture" class="img-thumbnail me-2" style="height: 60px; width: 60px;" alt="@item.Actor.FirstName" />
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Carousel -->
    <div class="container mt-4" style="max-width: 700px;">
        <div id="carouselExampleCaptions" class="carousel slide">
            <div class="carousel-indicators">
                @for (int i = 0; i < Model.Movie.Images.Count; i++)
                {
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" aria-label="Slide @(i + 1)"></button>
                }
            </div>
            <div class="carousel-inner">
                @for (int i = 0; i < Model.Movie.Images.Count; i++)
                {
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <img src="/images/movies/@Model.Movie.Images.ToList()[i].ImageUrl" class="d-block mx-auto" style="max-height: 300px; width: auto;" alt="Slide @(i + 1)">
                        <div class="carousel-caption d-none d-md-block">
                            <h5>Slide @(i + 1)</h5>
                            <p>Some representative placeholder content for slide @(i + 1).</p>
                        </div>
                    </div>
                }
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</div>
